package com.cjc.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

@Controller
public class StudentController {

	@RequestMapping("/greet") // this annotation is use to make java method as a HTTP method
	@ResponseBody
	public String greet() {
		return "Welcome To CJC Akurdi";
	}

	@RequestMapping("/")
	public String landingPage() {
		return "index.jsp";
	}

	@RequestMapping("/loginPage")
	public String loginPage() {
		System.out.println("*********** loginPage :: called *****************");
		return "login.jsp";
	}
	@RequestMapping("/regPage")
	public String registerPage() {
		System.out.println("*********** registerPage :: called *****************");
		return "register.jsp";
	}


	@RequestMapping("/log")
	public String loginCheck(@RequestParam String uname, @RequestParam String pass) {
		System.out.println(uname+"         "+pass);
		System.out.println("********* loginCheck :: Called");
		if(uname.equals("admin")&&pass.equals("admin@123"))
		return "success.jsp";
		else
		return "login.jsp";
	}

	@RequestMapping("/reg")
	public String registerStudent(@RequestParam int rollno,
			                           @RequestParam String name,
			                           @RequestParam long mobile,
			                           @RequestParam String email,
			                           @RequestParam String addres) {
		
		
		return "";
	}
	
}
